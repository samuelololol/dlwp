    <script type="text/javascript"> 
        var addthis_ng_custom_titleElement = document.getElementsByTagName('title')[0].text;
        var addthis_ng_custom_pagehref = 'http://on.natgeo.com/hQeO7h';
        var addthis_share = {
            templates: { twitter: addthis_ng_custom_titleElement + ': ' + addthis_ng_custom_pagehref + ' via @NatGeoSociety' }
        };
    </script>
    
    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=ng-dmg"></script>




    <script type="text/javascript" charset="utf-8">

        $('#ssoauth').prepend('<p class="action"><a class="rpxnow" style="display: none;" href="'+ssoURL+'">Sign In</a></p>');

        $.getScript(
        (("https:" == document.location.protocol) ? "https://": "http://static.") + "rpxnow.com/js/lib/rpx.js",
        function() {
            RPXNOW.overlay = true;
            RPXNOW.language_preference = 'en';
            RPXNOW.token_url = 'http://'+baseURL+'/rest/sso/rpx_response/?next='+pathURL+'';
            RPXNOW.realm = rpxNowRealm;
        });

        getUser();

        function getUser() {
            var requestBatch = new RequestBatch();

            //requesting a UserKey() with no parameter returns a User object for the current user
            // -- if the user is unauthenticated, the User object is our generic anonymous user
            requestBatch.AddToRequest(new UserKey());
            requestBatch.BeginRequest(process_url, getUserCallback);
        }

        function getUserCallback(responseBatch) {
            var loggedIn = false;
            var anonUser = responseBatch.Responses[0].User.UserKey.Key;
            var dispName = responseBatch.Responses[0].User.DisplayName;
            var personaURL = responseBatch.Responses[0].User.PersonaUrl;
            var tempPersonaURL = personaURL.split(".com");
            personaURL = 'http://www.nationalgeographic.com'+tempPersonaURL[1];
            var qString = window.location.search.substring(1);
            if (qString) {
             pathURL = pathURL+'?'+qString;
            }

            if (anonUser == 'anonymous') {
                $('#ssoauth .rpxnow').show();
            } else {
                loggedIn = true;
                $('#ssoauth .rpxnow').hide();
                $('#ssoauth').prepend('<p class="welcome_msg">Hi,&nbsp;<a href="' + personaURL + '" title="Go to your profile">' + dispName + '</a></p><p class="action"><a class="logout" href="/rest/sso/rpx_logout/">Sign Out</a></p>');
            }
        }

        function getCommentsInfo() {
            var requestBatch = new RequestBatch();
            requestBatch.AddToRequest(new ArticleKey(articleKey));
            requestBatch.BeginRequest(process_url, getCommentsInfoCallback);
        }

        function getCommentsInfoCallback(response){
            (typeof(response.Responses[0]) === 'undefined') ? cdata = '0' : cdata = response.Responses[0].Article;
            (cdata === '0') ? totalComments = '0' : totalComments = cdata.Comments.NumberOfComments;
            $('#share_buttons h3').after('<div class="pluck"><p><a href="#ng_comments" class="comments">Comments (<span class="count">'+totalComments+'</span>)</a></p></div>');
        }

        if (typeof(articleKey) != 'undefined') {
            getCommentsInfo();
        }

        // Advance the "recommend" counter when the button is clicked.  Function called in Pluck templates through "onClick" attribute.
        function recCount(link){
            var button = link.parent().next('span');
            var counter = button.find('.recommend_count');

            if (counter.length > 0){
                var count = parseInt(counter.text());
                counter.html(count+1);
            } else {
                button.append('<span class="recommend_count"> (1)</span>');
            }

            return false;
        }

        function shareCount(){
            var countText = $('#share_buttons .comments .count').text();
            var count = parseInt(countText);
            $('#share_buttons .comments .count').html(count+1);
        }

        pluckAppProxy.registerActivityCallback('CommentCreate', shareCount);

    </script>

</body>



</html>

